<style lang="scss">
    ul {
        margin: 0;
        padding: 0;
        list-style: none;
        position: relative;
        display: flex;
        align-items: center;

        font-family: var(--fonts-display);
        font-weight: var(--fontWeights-bold);
        text-transform: uppercase;
        letter-spacing: 0.05em;

        li a {
            padding-block: var(--spaces-1);
            padding-inline: var(--spaces-2);
            display: flex;
            flex-direction: row;
            gap: var(--spaces-1);
            flex-grow: 0;
            justify-content: center;
            align-items: center;
            border-radius: var(--radii-sm);
            transition: background-color 0.2s cubic-bezier(0.33, 1, 0.68, 1);

            &:hover {
                background-color: rgb(var(--colors-gray200));
            }

            &:active {
                color: rgb(var(--colors-gray50)) !important;
                background-color: rgb(var(--colors-gray900)) !important;

                &:hover {
                    background-color: rgb(var(--colors-gray900)) !important;
                }
            }
        }
    }

    @media only screen and (width <= 960px) {
        ul {
            gap: 0;
        }
    }
</style>
