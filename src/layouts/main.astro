---
import i18next from "i18next";
import type { Seo } from "../../lib/types";
import MainHead from "../components/MainHead.astro";

import "@fontsource/inter";
import "@fontsource/space-mono";
import "../../output/global.css";
import "../../output/light.css";
import "../../output/dark.css";

export interface Props {
    seo?: Seo;
    noTopPadding?: boolean;
}
const { seo, noTopPadding } = Astro.props;
---

<html lang={i18next.language}>
    <MainHead seo={seo} />

    <body>
        <div class={`container ${noTopPadding ? "" : "top-padding"}`}>
            <slot />
        </div>
    </body>

    <style lang="scss">
        .container {
            width: 100%;
            height: 100%;

            font-family: var(--fonts-text);

            &.top-padding {
                padding-top: calc(var(--spaces-headerHeight) + var(--spaces-6));
            }
        }
    </style>
</html>
