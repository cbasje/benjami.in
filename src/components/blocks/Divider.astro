---
import type { DividerBlock } from "../../../lib/types";

interface Props {
    node?: DividerBlock;
}
const { node } = Astro.props;
---

<div class="divider" role="none">
    {node?.text && <span>{node.text}</span>}
</div>

<style lang="scss">
    .divider {
        display: flex;
        flex-direction: row;
        align-items: center;
        align-self: stretch;
        margin-block: var(--size-3);
        padding-inline: var(--size-3);
        height: var(--size-3);
        white-space: nowrap;

        &:before,
        &:after {
            content: "";
            flex-grow: 1;
            height: 0.125rem;

            background: var(--theme-surface-2);
        }

        &.horizontal {
            flex-direction: column;
            margin-block: 0;
            margin-inline: var(--size-3);
            height: auto;
            width: var(--size-3);

            &:before,
            &:after {
                width: 0.125rem;
                height: 100%;
            }
        }

        > span {
            margin: var(--size-2);
        }
    }
</style>
