---
import { astroI18n } from "astro-i18n";
import type { Seo } from "../../lib/types";
import MainHead from "../components/MainHead.astro";

astroI18n.init(Astro);

export interface Props {
    seo?: Omit<Seo, "_type">;
}
const { seo } = Astro.props;
---

<!DOCTYPE html>
<html lang={astroI18n.langCode}>
    <MainHead seo={seo} />

    <body>
        <div class="container">
            <slot />
        </div>
        <style lang="scss">
            .container {
                width: 100%;
                height: 100%;
            }
        </style>
    </body>
</html>
