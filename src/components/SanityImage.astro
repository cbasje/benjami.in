<AstroImage
    class={`image${fillContainer ? " fill-container" : ""}`}
    width={width}
    height={height}
    src={srcUrl}
    alt={alt}
    loading="lazy"
    quality={100}
/> -->
<img
    class={`image${fillContainer ? " fill-container" : ""}`}
    width={width}
    height={height}
    src={srcUrl}
    alt={alt}
    loading="lazy"
/>
