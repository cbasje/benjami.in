---
import { Icon } from "astro-icon/components";
import type { Resume, SocialLink } from "../content/config";

interface Props {
    links: (SocialLink | Resume)[];
}
const { links } = Astro.props;
---

<ul role="list">
    {
        links.map((l) =>
            !("file" in l) ? (
                <li role="listitem">
                    <a
                        class="button"
                        title={l.title}
                        rel="nofollow me"
                        href={l.url}
                        target="_blank"
                    >
                        <Icon name={l.icon} aria-hidden />
                    </a>
                </li>
            ) : (
                <li role="listitem">
                    <a
                        class="button"
                        title={l.title}
                        rel="nofollow me"
                        href={l.file}
                        target="_blank"
                    >
                        <Icon name="ph:file-text-fill" aria-hidden />
                    </a>
                </li>
            )
        )
    }
</ul>

<style>
    ul {
        margin: 0;
        padding: 0;
        list-style: none;

        display: flex;
        align-items: center;
        gap: var(--size-3);

        font-weight: var(--font-weight-7);

        li {
            padding: 0;
            margin: 0;

            a:not(:hover) {
                border-color: var(--surface-2);
            }
        }
    }
</style>
