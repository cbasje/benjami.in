---
import type { Project } from "../../lib/types";
import ProjectCard from "./ProjectCard.astro";

export interface Props {
    projects: Project[];
}
const { projects } = Astro.props;
---

<div class="grid for-projects" role="grid">
    {
        projects.map((project: Project, i: number) => (
            <ProjectCard
                project={project}
                useCustomColour={projects.every((p) => !!p.colour)}
                key={project.slug}
            />
        ))
    }
</div>

<style lang="scss">
    .grid.for-projects {
        grid-template-columns: repeat(2, 1fr);
        grid-template-rows: repeat(2, 1fr);
        grid-template-areas:
            "main side-up"
            "main side-down";
        grid-gap: var(--spaces-2);
        align-items: stretch;

        :global(:first-child) {
            grid-area: main;
            --cardBg: rgb(var(--colors-purple100));
        }
        :global(:nth-child(2)) {
            grid-area: side-up;
            --cardBg: rgb(var(--colors-green100));
        }
        :global(:nth-child(3)) {
            grid-area: side-down;
            --cardBg: rgb(var(--colors-blue100));
        }
    }

    @media (width <= 640px) {
        .grid.for-projects {
            display: flex;
            flex-direction: column;
            justify-content: stretch;
            gap: var(--spaces-2);
        }
    }
</style>
