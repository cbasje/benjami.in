---
import { urlForImage } from "../../lib/sanity";
import type { Image } from "../../lib/types";

export interface Props {
    src: Image;
    width: number;
    height: number;
    fillContainer?: boolean;
}
const { src, fillContainer, width, height } = Astro.props;
---

<img
    class={`image ${fillContainer ? "fill-container" : ""}`}
    width={width}
    height={height}
    src={urlForImage(src)
        .width(width)
        .height(height)
        .auto("format")
        .fit("max")
        .url()}
    alt={""}
    loading="lazy"
/>
