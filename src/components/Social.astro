---
import { Icon } from "astro-icon";
import type { Resume, SocialLink } from "../../lib/types";

interface Props {
    links: (SocialLink | Resume)[];
}
const { links } = Astro.props;
---

<ul role="list">
    {
        links.map((l) =>
            l._type == "social-link" ? (
                <li role="listitem">
                    <a
                        title={l.title}
                        rel="nofollow me"
                        href={l.url}
                        target="_blank"
                    >
                        <Icon name={l.icon} aria-hidden />
                    </a>
                </li>
            ) : (
                <li role="listitem">
                    <a
                        title={l.title}
                        rel="nofollow me"
                        href={l.fileUrl}
                        target="_blank"
                    >
                        <Icon name="ph:file-text-fill" aria-hidden />
                    </a>
                </li>
            )
        )
    }
</ul>

<style lang="scss">
    @import "open-props/media";

    ul {
        margin: 0;
        padding: 0;
        list-style: none;

        display: flex;
        align-items: center;
        gap: var(--size-2);

        font-weight: var(--font-weight-7);

        li {
            padding: 0;
            margin: 0;

            a {
                flex-grow: 0;
                display: block;

                color: inherit;
                text-decoration: none;
                text-shadow: none;

                border-radius: var(--radius-round);
                padding-block: var(--size-2);
                padding-inline: var(--size-3);

                scale: 1;
                transition: scale 0.375s var(--ease-squish-4),
                    color 0.2s var(--ease-in-out-4);

                &:active {
                    scale: 0.95;
                }

                &:hover {
                    color: var(--theme-accent-1);
                }

                > :global(svg) {
                    width: var(--font-size-4);
                    height: var(--font-size-4);
                }
            }
        }
    }

    @media (--lg-n-below) {
        ul {
            gap: 0;
        }
    }
</style>
