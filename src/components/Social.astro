<style lang="scss">
    @import "open-props/media";

    ul {
        margin: 0;
        padding: 0;
        list-style: none;
        display: flex;
        position: relative;
        align-items: center;
        gap: var(--size-2);

        font-weight: var(--font-weight-7);
        text-transform: uppercase;
        letter-spacing: 0.05em;

        li {
            padding: 0;

            a {
                flex-grow: 0;
            }
        }
    }

    @media (--lg-n-below) {
        ul {
            gap: 0;
        }
    }
</style>
